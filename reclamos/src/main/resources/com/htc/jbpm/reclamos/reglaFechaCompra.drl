package com.htc.jbpm.reclamos;

import com.htc.jbpm.reclamos.ReclamoDTO

rule "set as adult" ruleflow-group "reglaFechaCompra"
no-loop
when
	$p: ReclamoDTO(montoCompra > 18)
then 
	modify($p){
		setFechaCompraValida(true);
	}
end

rule "set as teenager" ruleflow-group "reglaFechaCompra"
no-loop
when
	$p : ReclamoDTO(montoCompra< 18)
then
	modify($p){
		setFechaCompraValida(false);
	}
end