package com.htc.jbpm.reclamos;

rule "set as adult" ruleflow-group "reglaFechaCompra"
no-loop
when
	$p: Person(age > 18)
then 
	modify($p){
		setAdult(true);
	}
end

rule "set as teenager" ruleflow-group "reglaFechaCompra"
no-loop
when
	$p : Person(age < 18)
then
	modify($p){
		setAdult(false);
	}
end